---
 interface Props{
     name: string,
     url: string
 }
 const {name, url} = Astro.props;
 const urlObj = new URL(url);
 const id = urlObj.pathname.split('/')[4];
 //opcion m√°s limpia
 const id2 = urlObj.pathname.split('/').at(-2);
 const urlImage = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;

---

<div class="rounded border flex flex-col justify-center items-center p-2">
    <h2>{name}</h2>
    <img src={urlImage} alt={"Pokemon con id:" + id}/>
</div>