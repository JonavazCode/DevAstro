---
 interface Props{
     name: string;
     url: string;
     isBig?: boolean;
 }
 const {name, url, isBig = false} = Astro.props;

 const id = url.split('/').at(-2);
 const urlImage = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;

 console.log(isBig);
---

   <!--class="rounded border flex flex-col justify-center items-center p-2"-->
    <a href={`/pokemons/${name}`}
       class:list={[
           `rounded flex flex-col justify-center items-center p-2`,
           { border: !isBig, },
       ]}
    >
    <img transition:name={`${name}-image` }
         src={urlImage} alt={"Pokemon con id:" + id}
         class:list={[
             {
                 'w-64 h-64': isBig, 'w-32 h-32': !isBig
             },
         ]}
    />
    <span class:list={[
        'capitalize',
        {
            'text-4xl text-blue-300': isBig,
        },
    ]}>#{id} {name}</span>
</a>